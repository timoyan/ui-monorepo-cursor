{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": false,
		"outDir": "build-types",
		"rootDir": "src/ui",
		"strict": false,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/ui/**/*.ts", "src/ui/**/*.tsx"],
	"exclude": [
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"src/test-setup.ts"
	]
}

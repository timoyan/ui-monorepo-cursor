{
	"$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!packages/*/node_modules",
			"!packages/*/build",
			"!packages/*/build-types",
			"!packages/*/.next",
			"!packages/*/dist",
			"!packages/module-library/loader",
			"!packages/module-library/react",
			"!packages/module-library/src/components.d.ts",
			"!packages/module-library/test",
			"!**/mockServiceWorker.js",
			"!**/styled-system",
			"!**/test-result",
			"!**/test-results",
			"!**/next-env.d.ts",
			"!**/.stencil",
			"!**/.storybook",
			"!**/coverage",
			"!**/out",
			"!**/*.tsbuildinfo",
			"!.turbo",
			"!.cache",
			"!playwright-report",
			"!test-results",
			"!.playwright"
		]
	}
}
